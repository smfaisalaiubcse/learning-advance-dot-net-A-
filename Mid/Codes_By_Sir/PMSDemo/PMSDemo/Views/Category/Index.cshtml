
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var d in Model) { 
        <tr>
            <td>@d.Id</td>
            <td>@d.Name</td>
            <td>
                <a class="btn btn-success" href="/Category/Edit/@d.Id">Edit</a>
                <a class="btn btn-danger" href="/Category/Delete/@d.Id">Delete</a>
            </td>
        </tr>
        
    }


</table>
